@using DOAN3.Models.Entities;
@using DOAN3.Bussiness;
@{ 
    QuanLySanPhamBus db = new QuanLySanPhamBus();
    var ds = db.LaySPGiamGia();
}

<section class="featured-pro wow animated parallax parallax-2">
    <div class="container">
        <div class="std">
            <div class="slider-items-products">
                <div class="featured_title center">
                    <h2>SẢN PHẨM HOT</h2>
                </div>
                <div id="featured-slider" class="product-flexslider hidden-buttons">
                    <div class="slider-items slider-width-col4">
                        <!-- Item -->
                        @foreach (var sp in ds)
                        {
                            int newprice = sp.DonGia - (sp.DonGia * sp.GiamGia) / 100;
                            <div class="item">
                                <div class="col-item">
                                    <div class="sale-label sale-top-right">Giảm giá @sp.GiamGia %</div>
                                    <div class="images-container">
                                        <a class="product-image" title="Sample Product" href="/XemSanpham/XemSanphamChitiet?ma=@sp.MaSP"> <img src="~/Content/products-images/@sp.HinhAnh" class="img-responsive" alt="a" /> </a>
                                        <div class="actions">
                                            <div class="actions-inner">
                                                <button type="button" title="Add to Cart" class="button btn-cart" data-id="@sp.MaSP"><span>Thêm vào giỏ hàng</span></button>
                                            </div>
                                        </div>
                                        <div class="qv-button-container"> <a href="/XemSanpham/XemSanphamChitiet?ma=@sp.MaSP" class="qv-e-button btn-quickview-1"><span><span>Xem</span></span></a> </div>
                                    </div>
                                    <div class="info">
                                        <div class="info-inner">
                                            <div class="item-title"> <a title="Sample Product" href="/XemSanpham/XemSanphamChitiet?ma=@sp.MaSP">@sp.TenSP</a> </div>
                                            <!--item-title-->
                                            <div class="item-content">
                                                <div class="ratings">
                                                    <div class="rating-box">
                                                        <div style="width:60%" class="rating"></div>
                                                    </div>
                                                </div>
                                                <div class="price-box">
                                                    <p class="special-price"> <span class="price">@newprice.ToString("#,##") VNĐ</span> </p>
                                                    <p class="old-price"> <span class="price-sep">-</span> <span class="price">@sp.DonGia.ToString("#,##") VNĐ</span> </p>
                                                </div>
                                            </div>
                                            <!--item-content-->
                                        </div>
                                        <!--info-inner-->

                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                        }
                        
                        <!-- End Item -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
