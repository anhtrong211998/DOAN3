@using DOAN3.Models.Entities;
@using PagedList.Mvc;
@model PagedList.PagedList<SanPham>
@{
    ViewBag.Title = "Trang Chủ";
}
@if (Model != null)
{
    <section class="recommend container">
        <div class="new-pro-slider" style="overflow:visible">
            <div class="slider-items-products">
                <div class="new_title center">
                    <div class="category-products" id="renderhtml">
                        <div class="toolbar">
                            <h2>SẢN PHẨM ĐÁNG MUA</h2>
                            <div id="sort-by">
                                <a class="button-asc left" href="#" title="Set Descending Direction"><span style="color:#999;font-size:15px;top:7px;position:relative;" class="icon-arrow-up"></span></a>
                            </div>
                            <div class="pager">
                                <div class="pages">
                                    <label>Page:</label>
                                    @Html.PagedListPager(Model, page => Url.Action("Index", "Home", new { page }))
                                </div>
                            </div>
                        </div>
                        <ul class="products-grid">
                            @foreach (SanPham sp in Model)
                            {
                                int newprice = (sp.DonGia) - ((sp.DonGia * sp.GiamGia) / 100);
                                if (sp.GiamGia > 0)
                                {
                                    <li class="item col-lg-4 col-md-4 col-sm-6 col-xs-6">
                                        <div class="col-item">
                                            <div class="sale-label sale-top-right">Giảm giá @sp.GiamGia %</div>
                                            <div class="images-container">
                                                <a class="product-image" title="Sample Product" href="/XemSanpham/XemSanphamChitiet?ma=@sp.MaSP"> <img src="~/Content/products-images/@sp.HinhAnh" class="img-responsive" alt="a" /> </a>
                                                <div class="actions">
                                                    <div class="actions-inner">
                                                        <button type="button" title="Add to Cart" class="button btn-cart" data-id="@sp.MaSP"><span>Thêm vào giỏ hàng</span></button>
                                                    </div>
                                                </div>
                                                <div class="qv-button-container"> <a class="qv-e-button btn-quickview-1" href="/XemSanpham/XemSanphamChitiet?ma=@sp.MaSP"><span><span>Xem</span></span></a> </div>
                                            </div>
                                            <div class="info">
                                                <div class="info-inner">
                                                    <div class="item-title"> <a title="Sample Product" href="/XemSanpham/XemSanphamChitiet?ma=@sp.MaSP">@sp.TenSP</a> </div>
                                                    <!--item-title-->
                                                    <div class="item-content">
                                                        <div class="ratings">
                                                            <div class="rating-box">
                                                                <div style="width:60%" class="rating"></div>
                                                            </div>
                                                        </div>
                                                        <div class="price-box">
                                                            <p class="special-price"> <span class="price">@newprice.ToString("#,##") VNĐ</span> </p>
                                                            <p class="old-price"> <span class="price-sep">-</span> <span class="price">@sp.DonGia.ToString("#,##") VNĐ</span> </p>
                                                        </div>
                                                    </div>
                                                    <!--item-content-->
                                                </div>
                                                <div class="clearfix"> </div>
                                            </div>
                                        </div>
                                    </li>
                                }
                                else
                                {
                                    <li class="item col-lg-4 col-md-4 col-sm-6 col-xs-6">
                                        <div class="col-item">
                                            <div class="new-label new-top-right">New</div>
                                            <div class="images-container">
                                                <a class="product-image" title="Sample Product" href="/XemSanpham/XemSanphamChitiet?ma=@sp.MaSP"> <img src="~/Content/products-images/@sp.HinhAnh" class="img-responsive" alt="a" /> </a>
                                                <div class="actions">
                                                    <div class="actions-inner">
                                                        <button type="button" title="Add to Cart" class="button btn-cart" data-id="@sp.MaSP"><span>Thêm vào giỏ hàng</span></button>
                                                    </div>
                                                </div>
                                                <div class="qv-button-container"> <a class="qv-e-button btn-quickview-1" href="/XemSanpham/XemSanphamChitiet?ma=@sp.MaSP"><span><span>Xem</span></span></a> </div>
                                            </div>
                                            <div class="info">
                                                <div class="info-inner">
                                                    <div class="item-title"> <a title="Sample Product" href="/XemSanpham/XemSanphamChitiet?ma=@sp.MaSP">@sp.TenSP</a> </div>
                                                    <!--item-title-->
                                                    <div class="item-content">
                                                        <div class="ratings">
                                                            <div class="rating-box">
                                                                <div style="width:60%" class="rating"></div>
                                                            </div>
                                                        </div>
                                                        <div class="price-box">
                                                            <p class="special-price"><span class="price">@sp.DonGia.ToString("#,##") VNĐ</span></p>
                                                        </div>
                                                    </div>
                                                    <!--item-content-->
                                                </div>
                                                <div class="clearfix"> </div>
                                            </div>
                                        </div>
                                    </li>
                                }
                            }
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
