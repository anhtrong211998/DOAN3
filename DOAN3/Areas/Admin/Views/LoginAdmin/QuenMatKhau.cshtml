
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>QuenMatKhau</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/login")
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="logmain">
        <div class="sublog">
            <!-- title -->
            <div class="toplog">
                <h2><a href=""><span>I</span>nspire</a></h2>
            </div>
            <!-- end title -->
            <div class="mainlog">
                <div class="toptitle">
                    <p class="title">Quên mật khẩu<span class="icon-hand-down"></span></p>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                    <div class="input">
                        <input type="text" id="txtusername" placeholder="User name" name="UserName" required="" oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Please enter a user name!')" />
                        <span class="icon-user"></span>
                    </div>
                    <div class="inputf">
                    </div>
                    <input type="submit" class="btn-submit" value="Xác nhận" />
                }
            </div>
        </div>
    </div>
</body>
</html>
