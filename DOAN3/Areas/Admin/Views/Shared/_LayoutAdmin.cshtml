    <script>
        var toggle = true;
        $(".sidebar-icon").click(function () {
            event.defaultPrevented();
          if (toggle)
          {
            $(".page").addClass("sidebar-collapsed").removeClass("sidebar-collapsed-back");
            $("#menu span").css({"position":"absolute"});
          }
          else
          {
            $(".page").removeClass("sidebar-collapsed").addClass("sidebar-collapsed-back");
            setTimeout(function() {
              $("#menu span").css({"position":"relative"});
            }, 400);
          }
          toggle = !toggle;
        });
