<div id="modalADDUPDATE" class="modalthem modal">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3>ADD/UPDATE</h3>
    <div class="modal-body">
        <form>
            <div class="form-group">
                <label for="txtmaBL">Mã bình luận:</label>
                <input type="text" class="form-control" id="txtmaBL">
                <input type="hidden" class="form-control" id="hidID" value="0">
            </div>
            <div class="form-group">
                <label for="txtnoidung">Nội dung bình luận:</label>
                <input type="text" class="form-control" id="txtnoidung">
            </div>
            <div class="form-group">
                <label for="txtmaTV">Mã thành viên:</label>
                <input type="text" class="form-control" id="txtmaTV">
                @*@Html.DropDownList("Email", null, "NULL", new { @class = "form-control col-md-7", @id = "txtmaTV" })*@
            </div>
            <div class="form-group">
                <label for="txtmaSP">Mã sản phẩm:</label>
                <input type="text" class="form-control" id="txtmaSP">
                @*@Html.DropDownList("MaSP", null, "NULL", new { @class = "form-control col-md-7", @id = "txtmaSP" })*@
            </div>
            <div class="form-group">
                <label for="txtdanhgia">Đánh giá:</label>
                <input type="text" class="form-control" id="txtdanhgia">
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
</div>
